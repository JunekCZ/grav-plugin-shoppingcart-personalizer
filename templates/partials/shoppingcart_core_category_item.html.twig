{% set shoppingcart_category_image = page.media.images|first %}

<div class="shoppingcart-item block">
    <h3><a href="{{ page.url|raw }}">{{ page.header.category|e }}</a></h3>
    {% if config.plugins.shoppingcart.ui.image_container_square %}
    <div class="shoppingcart-thumb" style="text-align:center;width:300px;height:300px;background-color:{{ page.header.category_bgcolor }};">            
    {% else %}
    <div class="shoppingcart-thumb">    
    {% endif %}    
        {% if shoppingcart_category_image %}
        <a href="{{ page.url|raw }}">{{ shoppingcart_category_image.cropResize(300, 300).html(page.header.category, 'shoppingcart-thumb-image')|raw }}</a>
        {% endif %}
    </div>
</div>
